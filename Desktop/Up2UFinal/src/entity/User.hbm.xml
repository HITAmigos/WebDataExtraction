<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.lyx.action">

<class name="User" polymorphism="explicit">

	<id name="id">
		<generator class="increment" ></generator>
	</id>

	<property name="username" 	column="username" ></property>
	<property name="password" 	column="password" ></property>
	<property name="email" 		column="email" 	  ></property>
	<property name="limit" 		column="limit" 	  ></property>
	<property name="level" 		column="level" 	  ></property>
	<property name="coins" 		column="coins" 	  ></property>

</class>

</hibernate-mapping>