<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="entity.assistantEntity">

<class name="Comment" polymorphism="explicit">

	<id name="id">
		<generator class="increment" ></generator>
	</id>

	<property name="username"	type="string" 	column="username"  ></property>
	<property name="name" 	type="string" 		column="name" ></property>
	<property name="message" 	type="string"	column="message"   ></property>
	<property name="date" 		type="date"		column="date" 	   ></property>
    <property name="email" 		type="string"		column="email" 	   ></property>
</class>

</hibernate-mapping>